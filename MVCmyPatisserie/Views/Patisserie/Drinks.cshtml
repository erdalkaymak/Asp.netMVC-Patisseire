
@{
    ViewBag.Title = "Drinks";
}
@model List<DataAccessLayer.MyEntities.Drink>
<link href="~/Content/style.css" rel="stylesheet" />
<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script src="~/Scripts/custom.js"></script>

<h2>Drinks</h2><br/>

               <div class="outer-container home-page">
                   <div class="container-fluid">

                       <div class="row">
                           @{ foreach (var item in Model)
                               {
                                   <div class="col-12 col-md-6 col-lg-3" style="margin-bottom:20px;">
                                       <div class="portfolio-content">
                                           <figure>
                                               <img src="/images/@item.ImageUrl" alt="">
                                           </figure>

                                           <div class="entry-content flex flex-column align-items-center justify-content-center">
                                               <div>
                                                   <div><h3 style="text-align:left;margin:5px;margin-bottom:55px;margin-top:30px;"><a href="#">@item.Name</a></h3></div>
                                                   <div><h5 style="text-align:left;margin:5px;opacity:0.5"><a href="#">@item.Description</a></h5></div>
                                               </div>

                                           </div><!-- .entry-content -->

                                       </div><!-- .portfolio-content -->
                                   </div><!-- .col -->
                               }

                           }
                       </div><!-- .row -->
                   </div><!-- .container-fluid -->
               </div>


