    function submitMyForm() {
        if ($('#Username').val() == "") {
            alert("Username can not be empty");
            $('#Username').focus();
            return;
        }
        if($('#Password').val() == "") {
            alert("Password can not be empty");
            $('#Password').focus();
            return;
        }
        if (

            $('#Email').val() == "") {
            alert("Email can not be empty");
            $('#Email').focus();
            return;
        }

        $('#frm1').submit();
    }
  
</script>
<h2>AddUser</h2>

@using (Html.BeginForm("Update","Users",FormMethod.Post,new { id = "frm1" }))
{
